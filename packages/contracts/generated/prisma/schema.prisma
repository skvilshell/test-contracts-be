generator client {
  provider = "prisma-client-js"
  output   = "../../packages/contracts/generated/prisma"
  // previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
}

enum Size {
  XXS
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

model Customer {
  id         String  @id() @default(uuid())
  firstName  String
  secondName String
  colors     Color[]

  @@map("customer")
}

model Warehouse {
  Product   Product @relation(fields: [productId], references: [id])
  productId String  @unique
  color     Color
  size      Size
  rest      Int     @db.Integer

  @@id([productId, color, size])
  @@map("warehouse")
}
