model Category {
  category CategoryTitle @id
  title    String        @db.VarChar(100)

  Product Product[]

  @@map("category")
}

enum CategoryTitle {
  tShirt
  tShirtPolo
  cap
}

enum Color {
  pink
  white
  black
}

model Product {
  id        String        @id @default(uuid()) @db.Uuid
  title     String
  colors    Color[]
  sizes     Size[]
  Category  Category      @relation(fields: [category], references: [category])
  category  CategoryTitle
  warehouse Warehouse?

  @@map("product")
}

